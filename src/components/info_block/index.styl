

@require '../../vars'

.z-info-block
  flex1()
  display: flex
  padding: 16px

  > .inner
    max-width: $inputMaxWidth
    margin: 0 auto
    display: flex
    flex1()
    flex-direction: column

    > .top
      margin-top: auto

    > .bottom
      margin-bottom: auto

    > .title
      font-h1()
      text-transform: uppercase
      text-align: center
      margin-bottom: 16px

    > .content
      font-body1()
      text-align: center

    > .form
      margin-top: 32px
      display: flex
      flex-direction: column
