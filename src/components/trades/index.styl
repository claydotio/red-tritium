@require '../../vars'

$zIndexFadeOut = 9999

.z-trades
  flex1()
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .no-trades
    text-align: center
    padding: 16px
    width: 100%
    box-sizing: border-box

    > .icon
      margin: 32px auto 16px auto

    > .title
      font-title()
      margin-bottom: 16px

    > .description
      font-body1()

  > .g-grid
    > .trades
      padding: 16px
      width: 100%
      box-sizing: border-box

      > .trade
        display: flex
        position: relative
        cursor: pointer

        &.is-complete
          > .icon
            background: getColor('$green500')

        &.is-expired
          > .icon
            background: getColor('$red500')

        &.is-pending
          > .icon
            background: getColor('$amber500')

        &.is-declined
          > .icon
            background: getColor('$red500')

        > .icon
          width: 40px
          height: 40px
          border-radius: 50%
          display: flex
          align-items: center
          justify-content: center
          margin-right: 16px


        > .details
          flex1()

          > .title
            font-subhead()
            font-weight: 500
            margin-bottom: 4px

          > .description
            font-caption2()
            font-weight: 400px
            display: flex

            > .expires
              margin-left: 16px

          > .items
            margin-top: 8px

            > .sending, .receiving
              position: relative
              white-space: nowrap
              overflow: hidden
              padding-right: 8px

              > .item
                margin: 0 4px
                display: inline-block

                &:first-child
                  margin-left: 0

                &:last-child
                  margin-right: 0

              > .fade-out
                font-body2()
                position: absolute
                z-index: $zIndexFadeOut
                top: 0
                right: 0
                width: 60px
                height: 100%
                background: linear-gradient(to right, transparent 0%, getColor('$grey200') 70%)
                color: getColor('$tertiary500')
                display: flex
                align-items: center
                justify-content: flex-end

            > .swap-icon
              width: 24px
              margin: 8px 0

          > .divider
            width: 100%
            height: 1px
            background: getColor('$black12')
            margin: 12px 0

        > .delete
          position: absolute
          right: 0
          top: 0
