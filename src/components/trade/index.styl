@require '../../vars'

.z-trade
  display: flex
  flex-direction: column
  flex: 1
  width: 100%

  > .top
    shadow-1()
    background: getColor('$tertiary700')
    box-sizing: border-box

    > .g-grid
      > .title
        font-subhead()
        color: getColor('$tertiary500Text')
        font-weight: 500
        margin-bottom: 20px

  > .g-gird
    > .error
      font-subhead()
      padding: 16px

  > .top, > .bottom
    width: 100%
    padding: 16px
    box-sizing: border-box

    > .g-grid
      > .title
        font-subhead()
        color: getColor('$tertiary900Text')
        font-weight: 500
        margin-bottom: 20px

      > .items
        white-space: nowrap
        overflow-x: auto
        overflow-y: hidden
        -webkit-overflow-scrolling: touch

        > .item
          display: inline-block
          vertical-align: top
          margin-right: 8px
          max-width: 100px

          > .name
            font-caption1(false)
            margin-top: 4px
            left: 0
            top: 0
            white-space: nowrap
            overflow: hidden
            text-overflow: ellipsis


  > .bottom
    flex: 1
    display: flex
    flex-direction: column

    > .g-grid
      display: flex
      flex-direction: column
      flex: 1

      > .actions
        margin-top: auto
        display: flex
        align-items: center

        > .decline-button
          width: 48px

          // HACK (zorium style)
          .button
            min-width: 40px

        > .other-buttons
          flex: 1
          display: flex
          align-items: center

          > .button
            flex: 1

        > .cant-complete
          text-align: center
          margin: auto

.z-trade_top-right
  display: flex
  align-items: center
