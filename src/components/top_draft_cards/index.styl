@require '../../vars'

.z-top-touchdown-cards
  padding: 16px
  width: 100%
  box-sizing: border-box

  > .g-grid
    > .ad
      margin: 16px 0
    > .card-row, > .header
      display: flex
      align-items: center
      width: 100%

      > .card
        width: 50px

      > .name
        font-title()
        margin-left: 16px

      > .win-rate
        margin-left: auto

    > .header
      > .name, > .win-rate
        font-subhead()
        color: getColor('$primary500')
