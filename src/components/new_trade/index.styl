@require '../../vars'

$zIndexStepBar = 10

.z-new-trade
  flex: 1
  display: flex
  flex-direction: column

  > .step-bar
    width: 100%
    box-sizing: border-box
    padding: 0 8px
    z-index: $zIndexStepBar
    background: getColor('$tertiary700')
    display: flex
    align-items: center
    justify-content: center

    > .g-grid
      flex: 1
      display: flex
      align-items: center
      justify-content: center

      > .previous, > .next
        font-button()
        color: getColor('$tertiary900Text')
        -webkit-tap-highlight-color: transparent
        padding: 16px
        box-sizing: content-box
        cursor: pointer

      > .next
        display: flex
        align-items: center
        color: getColor('$tertiary300')

        &.can-continue
          color: getColor('$tertiary900Text')

        > .icon
          min-width: 0

      > .step-counter
        display: flex
        margin: 0 auto

        > .step-dot
          width: 6px
          height: 6px
          border-radius: 50%
          margin-right: 4px
          background: getColor('$tertiary900')

          &.is-active
            background: getColor('$primary500')
