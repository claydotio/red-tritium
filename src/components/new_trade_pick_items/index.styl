@require '../../vars'

$zIndexTop = 100

.z-new-trade-pick-items
  flex1()
  display: flex
  flex-direction: column
  width: 100%

  > .top
    shadow-1()
    z-index: $zIndexTop
    width: 100%
    background: $white
    padding: 16px
    box-sizing: border-box
    clear: both

    > .g-grid

      > .title
        font-title()
        color: getColor('$primary500')

      > .added-items
        margin-top: 24px
        white-space: nowrap
        overflow-x: auto
        overflow-y: hidden
        min-height: 88px

        > .item
          font-size: 10px
          font-weight: 500
          color: getColor('$tertiary900')
          margin-right: 8px
          display: inline-block
          vertical-align: top
          width: 88px
          height: 88px
          box-sizing: border-box
          text-align: center

  > .items-container
    padding: 16px 8px 48px 8px
    flex1()
    overflow-y: scroll // want scrollbar to always be there so width is constant
    -webkit-overflow-scrolling: touch

    > .g-grid

      > .tabs-wrapper
        margin-bottom: 16px

      > .search-filter
        display: flex
        align-items: center
        margin-bottom: 8px

        > .search
          flex1()

        > .filter
          margin-left: 8px

          > .button > .button
            min-height: 40px
            line-height: 40px
            min-width: 40px

.z-trade-pick-items_filter-dialog
  width: 280px

  > .title
    font-subhead()
    font-weight: 500
    margin-bottom: 20px
    padding: 24px 24px 0 24px

  > .types
    max-height: 300px
    overflow: auto
    border-bottom: 1px solid getColor('$black12')
    padding: 0 24px

    > .type
      display: flex
      padding: 16px 0

      > .radio
        margin-right: 24px
        appearance: none
        outline: none
        width: 20px
        height: 20px
        border-radius: 50%
        border: 2px solid getColor('$black54')
        box-sizing: border-box
        position: relative

        &:checked
          background: getColor('$secondary500')
          border: 2px solid getColor('$secondary500')

          &:after
            content: ''
            position: absolute
            width: 100%
            height: 100%
            border-radius: 50%
            border: 2px solid getColor('$grey200')
            box-sizing: border-box

      > .text
        font-subhead()

  > .actions
    display: flex
    justify-content: flex-end
    padding-top: 8px
