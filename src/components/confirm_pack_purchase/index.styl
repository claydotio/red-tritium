@require '../../vars'

.z-confirm-pack-purchase
  background: getColor('$tertiary900')
  position: fixed
  z-index: 100
  width: 100%
  height: 100%
  box-sizing: border-box
  top: 0
  left: 0
  display: flex
  flex-direction: column

  > .content
    flex: 1
    display: flex
    flex-direction: column

    > .g-grid
      flex: 1
      display: flex
      flex-direction: column
      // max-height: 300px
      margin: auto

      > .pack
        // flex: 1
        background-size: auto 100%
        background-position: center
        background-repeat: no-repeat
        width: 300px
        height: 300px
        margin: auto

      > .description
        font-caption1()
        color: getColor('$tertiary700Text')
        background: getColor('$tertiary700')
        padding: 8px
        text-align: center
        margin-top: 8px
        // margin-bottom: 16px

        > .counter
          margin-top: 4px
          font-weight: 500
          color: getColor('$amber500')

        > .flex
          display: flex
          align-items: center
          justify-content: center

          > .icon
            margin-left: 2px

      > .button
        padding: 0 16px
        display: flex
        // margin-top: auto

        > div
          flex: 1

  > .pack-status
    background: getColor('$tertiary800')
    display: flex
    align-items: center
    width: 100%
    padding: 0 16px
    box-sizing: border-box
    height: 44px

    > .g-grid
      flex: 1
      display: flex
      align-items: center
      width: 100%

      > .claimed
        font-body2()
        text-transform: uppercase
        color: getColor('$amber500')

      > .divider
        width: 1px
        height: 100%
        background: getColor('$tertiary900Text12')
        margin: 0 16px

      > .requirement
        padding: 8px 0
        margin-right: 16px

        > .title
          font-size: 8px
          font-weight: 500
          color: $white
          text-transform: uppercase

        > .count
          zp-font-caption()
          margin-top: 4px
          color: $white

.z-confirm-pack-purchase_currency-amount
  display: flex
  align-items: center

  > .amount
    font-body2()
    color: getColor('$tertiary900Text')
    margin-right: 4px
