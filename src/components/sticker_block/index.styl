  //   background-repeat: no-repeat
  //   background-position: top right
  //   background-size: 55%


  > .count
    font-caption1(false)
    background: getColor('$tertiary700')
    text-align: center
    position: relative
    z-index: 1
    border-radius: 4px
    margin-top: 2px
    line-height: 12px

    &.can-upgrade
      cursor: pointer

    > .bar
      position: absolute
      left: 0
      top: 0
      height: 100%
      border-radius: 4px

    > .text
      position: relative

