@require '../../vars'

$zIndexSoldOut = 3

.z-sticker-block
  position: relative
  box-sizing: border-box
  border-radius: 2px
  opacity: 0.4

  &.is-owned
    opacity: 1

  > .sticker
    shadow-1()
    width: 100%
    position: relative
    z-index: 1
    display: block
    box-sizing: border-box
    background: getColor('$tertiary700')

    > .rarity-bar
      width: 100%
      height: 4px

  // > .sold-out
  //   position: absolute
  //   top: 0.5%
