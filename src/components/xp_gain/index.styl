@require '../../vars'

@keyframes z-xp-gain-animation-fade-in
  0%
    transform: scale(1)
    opacity: 1
  50%
    transform: scale(1)
    opacity: 1
  100%
    transform: scale(2)
    opacity: 0

.z-xp-gain
  > .xp
    font-caption1()
    position: fixed
    z-index: 9999
    opacity: 0
    pointer-events: none
    background: getColor('$tertiary500')
    padding: 4px 8px
    border-radius: 2px
    margin-top: -22px
    transform-origin: bottom
    animation: z-xp-gain-animation-fade-in 1s
