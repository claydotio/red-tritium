@require '../../vars'

.z-new-page
  flex1()
  width: 100%
  display: flex
  flex-direction: column;

.z-new-page_compose-head
  > .url
    display: flex
    align-items: center
    padding-left: 16px

    > .key
      width: 100%
      background: getColor('$tertiary900')
      padding: 16px 16px 16px 0
      margin: 0
      appearance: none
      border: none
      outline: none

      &::placeholder
        font-body1()
        color: getColor('$tertiary900Text54')

  > .divider
    width: 100%
    height: 1px
    background: getColor('$tertiary900Text12')
    margin: 0
