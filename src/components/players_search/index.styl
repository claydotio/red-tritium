

@require '../../vars'

.z-players-search
  flex1()
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  box-sizing: border-box
  padding: 16px
  text-align: center

  > .g-grid
    > .image
      display: block
      background-image: url($cdnUrl + '/empty_friends.svg')
      background-size: 100%
      background-repeat: no-repeat
      width: 167px
      height: 150px
      margin: 0 auto

    > .description
      font-body1()
      margin-top: 16px

    > .form
      padding-top: 16px
      max-width: 600px
      margin: 0 auto

      > .button
        margin-top: 20px

    > .ad
      margin-top: 16px

.z-players-search_dialog
  > .description
    font-caption1()

  > .elixir-collector
    display: block
    background-image: url($cdnUrl + '/elixir_collector.svg')
    background-size: 100%
    background-repeat: no-repeat
    width: 160px
    height: 160px
    margin: 20px auto 0 auto
