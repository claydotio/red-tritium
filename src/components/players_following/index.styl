

@require '../../vars'

.z-players-following
  width: 100%
  box-sizing: border-box
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .g-grid
    > .subhead
      font-subhead()
      color: getColor('$primary500')
      padding: 16px

    > .empty-state
      font-caption1()
      color: getColor('$tertiary300')
      text-align: center

      > .image
        display: block
        background-image: url($cdnUrl + '/empty_friends.svg')
        background-size: 100%
        background-repeat: no-repeat
        width: 232px
        height: 209px
        margin: 0 auto 16px auto
