@require '../../vars'

.z-color-picker_picker
  width: 40px
  height: 40px
  border: none

.z-color-picker_colors
  > .color
    width: 30px
    height: 30px
    display: inline-block
    margin-right: 4px
    border: 2px solid transparent

    &.is-selected
      border: 2px solid getColor('$white')

body > .color-picker
  z-index: 99999999
