@require '../../vars'

.z-item-list
  flex1()
  padding: 8px
  opacity: 0

  &.is-ready
    opacity: 1

  &.is-inactive
    overflow: hidden

  > .no-items
    font-body1()
    color: getColor('$tertiary900Text')
    line-height: 20px
    text-align: center
    padding: 16px

  > .spinner
    margin: 40px 0 16px 0

  > .group
    width: 100%

    > .title
      font-subhead()
      color: getColor('$primary500')
      margin-bottom: 8px

    > .row
      overflow: hidden

      &.is-visible
        > .item
          display: inline-block
          vertical-align: top

      > .item
        display: none

        &.has-on-click
          cursor: pointer
