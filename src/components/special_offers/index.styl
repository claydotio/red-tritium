@require '../../vars'

.z-special-offers
  padding: 16px
  width: 100%
  box-sizing: border-box

  > .g-grid
    > .g-cols
      > .g-col
        > .offer
          cursor: pointer

          > .header
            width: 100%
            height: 0
            padding-top: 33%
            background-size: cover
            border-radius: 2px 2px 0 0

          > .info
            padding: 8px
            border-radius: 0 0 2px 2px
            display: flex
            align-items: center

            > .left
              > .name
                font-title()

              > .amount
                display: flex
                align-items: center

            > .action
              font-button()
              margin-left: auto
              display: flex
              align-items: center
