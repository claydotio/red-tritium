@require '../../vars'

.z-special-offers
  padding: 16px
  width: 100%
  box-sizing: border-box
  position: relative

  &.no-permissions
    overflow: hidden

    &:after
      position: absolute
      content: ''
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: getColor('$black87')

  > .info-box
    font-body1()
    color: getColor('$white')
    position: absolute
    z-index: 1
    left: 0
    top: 0
    width: 100%
    padding: 16px
    box-sizing: border-box

    > .text
      margin-bottom: 8px


  > .g-grid
    > .g-cols
      position: relative
