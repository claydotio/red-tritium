@require '../../vars'

$zIndexTop = 100

.z-new-trade-confirm
  flex: 1
  display: flex
  flex-direction: column
  padding-bottom: 48px
  width: 100%

  > .top
    zp-shadow-1()
    z-index: $zIndexTop
    width: 100%
    background: getColor('$tertiary700')
    padding: 16px
    box-sizing: border-box

    > .g-grid
      > .title
        font-title()
        color: getColor('$primary500')

  > .content
    padding: 16px
    flex: 1
    overflow: auto
    -webkit-overflow-scrolling: touch

    > .g-grid

      > .title
        font-subhead()
        color: getColor('$tertiary900Text')
        font-weight: 500
        margin-bottom: 20px

      > .divider
        height: 1px
        margin: 8px -16px 20px -16px
        background: getColor('$tertiary900Text12')

      > .item
        display: inline-block
        vertical-align: top
        margin-right: 8px

      > .user
        display: flex
        align-items: center
        margin-bottom: 16px

        > .avatar
          margin-right: 16px

        > .name
          font-subhead()
          font-weight: 500
          color: getColor('$tertiary900Text')

        > .checkbox
          width: 18px
          height: 18px
          appearance: none
          margin-left: auto
          border-radius: 2px
          display: flex
          border: 2px solid getColor('$grey600')
          box-sizing: border-box

          &.is-checked
            border: none
            background: getColor('$secondary500')
