@require '../../vars'

.z-shop
  flex: 1
  width: 100%
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding: 16px
  box-sizing: border-box

  > .products
    > .product
      display: flex
      align-items: center
      margin: 8px 0

      > .info
        > .name
          font-title()

        > .limited
          font-caption2()

      > .buy
        margin-left: auto

.z-spend-fire_buy-button
  display: flex
  align-items: center

  > .amount
    flex: 1
