@require '../../vars'

.z-shop
  flex: 1
  padding: 4px
  width: 100%
  box-sizing: border-box

  > .g-grid
    > .info-card
      margin: 8px 16px 16px 16px

    > .no-products
      padding: 16px

    > .g-cols
      > .g-col
        height: 0
        overflow: hidden
        padding-top: 33%
        background-size: auto 90%
        background-position: center
        background-repeat: no-repeat
        position: relative
        background-color: getColor('$tertiary500')
        border: 2px solid getColor('$tertiary900')
        cursor: pointer

        @media (min-width: $breakPointMedium)
          padding-top: 11%

        > .more
          position: absolute
          top: 0
          width: 100%
          height: 100%
          display: flex
          align-items: center
          justify-content: center

        > .info
          position: absolute
          left: 0
          right: 0
          bottom: 0
          box-sizing: border-box
          background: getColor('$tertiary90054')
          padding: 4px 8px
          min-height: 48px

          > .name
            font-caption1()
            color: getColor('$tertiary900Text')
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap

          > .cost
            font-caption1()
            color: getColor('$tertiary900Text')
            display: flex
            align-items: center

            > .amount
              margin-right: 4px

          > .limited
            font-caption2()
            color: getColor('$tertiary900Text')
