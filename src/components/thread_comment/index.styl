@require '../../vars'

.z-thread-comment
  width: 100%
  box-sizing: border-box
  overflow: hidden

  > .comment
    display: flex

    > .content
      flex: 1
      min-width: 0 // fix

      > .author
        font-caption1()
        color: getColor('$tertiary300')
        display: flex

        > .name
          margin-left: 8px
          cursor: pointer
          display: flex

        > .icon
          margin-left: 4px

        > .trophies
          display: flex
          align-items: center

          > .icon
            margin-left: 4px


      > .body
        font-body1()
        margin-top: 8px
        overflow: hidden

        > div
          > .link
            text-decoration: underline

          > .sticker
            width: 70px
            height: 70px
            background-size: 100%
            background-repeat: no-repeat
            margin-right: auto

      > .card
        background: getColor('$black')
        padding: 8px
        margin-top: 12px
        border-radius: 2px
        cursor: pointer
        max-width: 300px

        > .title
          font-title()

        > .description
          font-body1()
          color: getColor('$white70')
          margin-top: 6px

      > .bottom
        display: flex

        > .actions
          margin-left: auto
          display: flex
          align-items: center

          > .reply
            font-button-small(false)
            color: getColor('$tertiary300')

          > .points
            display: flex
            align-items: center
            margin-left: 8px

            > .icon
              margin: 0 8px

  > .reply
    margin: 8px 0 16px 0

  > .children
    border-left: 2px solid getColor('$white12')
    padding-left: 16px
    margin: 8px 0


  @media (min-width: $breakPointMedium)
    > .comment > .content > .info > .name
      max-width: none
