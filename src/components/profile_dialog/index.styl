

@require '../../vars'

.z-profile-dialog
  display: none

  &.is-visible
    display: block

.z-profile-dialog_dialog
  background: getColor('$tertiary700')
  border-radius: 2px

  > .header
    padding: 24px 16px 16px 16px
    background: getColor('$tertiary900')
    border-top-left-radius: 2px
    border-top-right-radius: 2px
    position: relative
    text-align: center

    > .close
      position: absolute
      top: 8px
      right: 8px

    > .avatar
      width: 72px
      margin: 0 auto

    > .about
      margin-top: 8px

      > .name
        font-title()
        color: getColor('$white')
        margin-bottom: 4px

      > .roles
        font-caption2()
        min-height: 20px

  > .content
    list-style-type: none
    margin: 0
    padding: 8px 0

    > .divider
      background: getColor('$white12')
      height: 1px
      width: 100%
      margin: 8px 0

    > .menu-item
      cursor: pointer
      margin: 0
      padding: 8px 0
      display: inline-block
      box-sizing: border-box
      width: 25%
      text-align: center

      > .icon
        margin-bottom: 12px

      > .text
        font-caption2()
