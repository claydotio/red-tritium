@require '../../vars'

@keyframes z-scratch-sticker_spin
  0%
    transform: rotateY(0)
  50%
    transform: rotateY(180deg)
  100%
    transform: rotateY(360deg)

.z-scratch-sticker
  background: getColor('$tertiary900')
  position: fixed
  z-index: 9998
  width: 100%
  height: 100%
  box-sizing: border-box
  top: 0
  left: 0
  display: flex
  flex-direction: column

  > .content
    flex: 1
    display: flex
    flex-direction: column

    > .g-grid
      flex: 1
      display: flex
      flex-direction: column
      // max-height: 300px
      margin: auto

      > .sticker
        // flex: 1
        position: relative
        width: 300px
        height: 300px
        margin: auto
        pointer-events: none

        > .touch-to-scratch
          pointer-events: none
          display: none
          justify-content: center
          align-items: center
          color: getColor('$white')
          width: 100%
          height: 100%
          text-align: center
          position: absolute
          z-index: 10
          background: getColor('$black54')

        &.has-scratched-item
          pointer-events: all
          animation: z-scratch-sticker_spin ease-in 0.5s
          // transform: rotateY(180deg)
          // transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)

          > .touch-to-scratch
            display: flex

        &.has-started
          > .touch-to-scratch
            display: none


      > .info
        width: 100%
        max-width: 600px
        padding: 16px
        box-sizing: border-box
        margin: 0 auto auto auto
        text-align: center

        > .odds
          width: 100%
          max-width: 400px
          margin: 0 auto

          > .odd
            display: flex

            > .rarity
              font-title()

            > .odds
              margin-left: auto

      > .action
        padding: 16px
        // display: flex
        // margin-top: auto
        text-align: center

        > .text
          margin-bottom: 16px
