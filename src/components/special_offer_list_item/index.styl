@require '../../vars'

.z-special-offer-list-item
  cursor: pointer

  > .header
    width: 100%
    height: 0
    padding-top: 33%
    background-size: cover
    border-radius: 2px 2px 0 0

  > .info
    border-radius: 0 0 2px 2px

    > .top
      display: flex
      align-items: center
      padding: 8px

      > .left
        > .name
          font-title()

      > .amount
        font-button()
        margin-left: auto
        display: flex
        align-items: center

        > .icon
          margin-left: 2px
          margin-right: 2px

    > .actions
      display: flex
      border-top: 1px solid getColor('$tertiary90054')

      > .action
        flex: 1
        display: flex
        align-items: center
        padding: 2px 8px

        &:first-child
          border-right: 1px solid getColor('$tertiary700')

        &.is-installed
          > .description
            text-decoration: line-through;

        > .description
          font-caption1()
          margin-right: auto

          > .progress
            width: 100%
            height: 6px
            background: getColor('$tertiary900Text12')
            border: 1px solid
            border-radius: 2px

            > .fill
              height: 100%

.z-special-offer-list-item_install-button
  display: flex
  align-items: center

  > .icon
    margin-left: 2px
