@require '../../vars'

.z-channel-list
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .channel
    padding: 12px 16px
    display: flex
    cursor: pointer

    &.is-selected
      background: getColor('$tertiary500')

    > .hashtag
      font-body1()
      color: getColor('$tertiary300')

    > .info
      margin-left: 8px

      > .name
        font-title()
        color: getColor('$tertiary900Text')

      > .description
        font-caption1()
        color: getColor('$tertiary300')
