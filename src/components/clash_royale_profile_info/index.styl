@require '../../vars'

.z-clash-royale-profile-info
  flex: 1
  overflow: auto
  -webkit-overflow-scrolling: touch
  padding-bottom: 16px

  > .header
    width: 100%
    box-sizing: border-box
    background-color: getColor('$tertiary700')

    > .divider
      width: 100%
      height: 1px
      background: getColor('$white12')
      margin: 0

    > .g-grid

      > .referrer
        background: getColor('$primary900')
        padding: 8px
        margin-bottom: 16px
        border-radius: 2px
        margin: 16px 16px 0 16px

      > .info
        display: flex
        padding: 16px

        > .clan-badge
          margin-right: 16px;

        > .player
          > .name
            font-title()

          > .tag-and-clan
            font-caption1()
            color: getColor('$tertiary300')
            margin-top: 2px

          > .stats
            display: flex
            align-items: center
            margin-top: 16px

            > .trophies, > .level
              font-title()
              display: flex
              align-items: center

              > .icon
                margin-left: 8px

            > .level
              margin-left: 32px

        > .arena
          margin-left: auto
          width: 82px
          height: 76px
          background-size: auto 132%
          background-position: 55% 26%

      > .g-cols
        > .g-col
          > .text
            font-title()
            text-align: center

      > .follow-button, > .verify-button, > .message-button
        padding: 0 16px 16px 16px

  > .content
    padding: 0 16px

    > .card
      margin: 16px 0

    > .ad
      margin: 16px 0

    > .block
      > .g-grid
        > .splits-info-card
          margin-top: 16px

        > .title
          font-subhead()
          color: getColor('$primary500')
          margin: 16px 0

        > .addon
          margin-bottom: 8px

          &:last-child
            margin-bottom: 0

        > .g-cols
          > .g-col
            > .name
              font-caption1()
              color: getColor('$tertiary300')

            > .value
              font-title()
              margin-top: 4px
